{
	"name": "motion-swiper",
	"version": "1.0.3",
	"license": "MIT",
	"description": "Draggable slider with a fluid bending motion effect but no Threejs as usual",
	"homepage": "https://motion-swiper.vercel.app/",
	"repository": {
		"type": "git",
		"url": "https://github.com/jramke/motion-swiper"
	},
	"keywords": [
		"slider",
		"gsap",
		"draggable",
		"swiper",
		"motion"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint && sass --no-source-map --style=compressed src/lib/motionSwiper.scss dist/motionSwiper.css",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./css": "./dist/motionSwiper.css",
		"./scss": "./dist/motionSwiper.scss"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0",
		"@studio-freight/lenis": "^1.0.29",
		"bootstrap": "^5.3.2",
		"sass": "^1.69.5"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.27.4",
		"@sveltejs/package": "^2.0.0",
		"publint": "^0.1.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"gsap": "^3.12.x"
	}
}
